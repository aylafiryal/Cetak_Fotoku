<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_foto_order"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/illustration5"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_foto_filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="foto1"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_foto_order_ukuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="4R"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp">

                <Button
                    android:id="@+id/btn_dec_foto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-"
                    android:textSize="22sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tv_foto_num"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="22sp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/btn_inc_foto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+"
                    android:textSize="22sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sub_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rp25.000,00"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_del_foto_order"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="X"
            android:layout_marginStart="25dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>


</LinearLayout>